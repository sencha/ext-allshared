{
    "packagename": "grid",
    "buildfolder": "build",
    "manifestfolder": "manifest",

    "name": "bundler",
    "framework": "ext",
    "toolkit": "modern",
    "theme": "theme-neptune",
    "requires": [
        "renderercell",
        "font-ext",
        "ux",
        "d3",
        "pivot-d3",
        "font-awesome",
        "exporter",
        "pivot",
        "calendar",
        "charts",
        "treegrid",
        "froala-editor"
    ],
    "output": {
        "base": "./build/${app.packagename}",
        "resources": {
            "path": "./"
        }
    },
    "css": [
        {
            "path": "${build.out.css.path}",
            "bundle": true,
            "exclude": ["fashion"]
        }
    ]
}
